<h1 class="title">List of all owned groups</h1>
 
 <div class="allGroupsBox">
    <table class="table">
        <tr class="thead-dark">
            <th>Name</th>
            <th>Description</th>
        </tr>
        {{#each payload}}
            <tr>
                <td><a href="#group/{{id}}">{{name}}</a></td>
                <td>{{description}}</td>
            </tr>
        {{/each}}
    </table>    
</div>

<div class="createGroupBox">
    <h4 class="formTitle">Add new group</h4>
    <form id="createGroup" action="/groups" method="POST">
        <label>Name</label>
        <input type="text" id="formName" >
        <label>Description</label>
        <input type="text" id="formDescription" >
        <input type="submit" >
    </form>
</div>