<div class="container">
    </br>
    <div>
    <button id="backToGroups" type="button" class="btn submitBtn">Groups</button>
  </div>
  <br>
  <div>
    <form class="ciborg-form">
      <input type="hidden" id="groupId" name="groupId" value="{{groupId}}">
      <div class="input-block">
        <label for="groupName">Name:</label>
        <input class="form-control" type="text" id="groupName" name="groupName" value="{{groupName}}">
      </div>
      </br>
      <div class="input-block">
        <label for="groupDescription">Description:</label>
        <textarea class="form-control" id="groupDescription" name="groupDescription" cols="70" rows="10">{{groupDescription}}</textarea>
      </div>
      </br>
      <div>
      <button id="updateGroup" type="button" class="btn submitBtn">Update Group Details</button>
      </div>
       </br>
        <table class="table table-striped table-dark table-hover">
      <h5>Games:</h5>
      <thead class="thead-dark">
        <tr>
          {{#each header as |column|}}
            <th scope="col" class="test-class">{{column}}</th>
          {{/each}} 
          <th scope="col" class="test-class"> </th>
        </tr>
      </thead>
      <tbody>
        {{#if elements}}
          {{#each elements as |row|}}
            <tr>
              <td name="gameId">{{row.id}}</td>
              <td name="gameName">{{row.name}}</td>
              <td name="gameMin">{{row.min_playtime}}</td>
              <td name="gameMax">{{row.max_playtime}}</td>
              <td> <button id="{{@index}}" name="removeGameFromGroup" type="button" class="btn submitBtn">Remove game from group</button> </td>
            </tr>
          {{/each}}
        {{else}}
          <tr>
                <td colspan="5" class="no-records">No records found!</td>
            </tr>
        {{/if}}
        
      </tbody>
    </table>
    </form>
   
  
  </div>
  <div>
    
    
    <br/>
    
    <form id="searchGameForm" class="ciborg-form">
      <h2>Search Game by name:</h2>
      <div class="form-group">
        <label for="searchGameName">Game name:</label>
        <input type="text" id="searchGameName" name="searchGameName" value="" placeholder="insert name to search" required>
      </div>
      <button type="submit" class="btn submitBtn">Search</button>
    </form>
    </br>
    <table class="table table-striped table-dark table-hover" id="gamesSearchedTable">
      <thead class="thead-dark">
        <tr>
          {{#each header as |column|}}
            <th scope="col" class="test-class">{{column}}</th>
          {{/each}} 
          <th scope="col" class="test-class"> </th>
        </tr>
      </thead>
      <tbody id="searchResults">
      </tbody>
    </table>
    </div>
</div>
