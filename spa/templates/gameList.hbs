<div class="container">
  <div class="form-container">
    <div class="col-md-6">
        <h3>Search Games</h3>
        <form id="searchGamesForm">
            <div class="form-group">
                <input type="text" id="gameName" name="gameName" class="form-control" placeholder="Game's name" value="" />
            </div>
            <div class="form-group">
                  <button id="searchButton" class="btn submitBtn" type="button">Search</button> 
            </div>
        </form>
    </div>
  </div>

  <div class="table-container">
    <table class="table table-striped table-dark table-hover">
    <thead class="thead-dark">
      <tr>
        {{#each header as |column|}}
          <th scope="col">{{column}}</th>
        {{/each}} 
      </tr>
    </thead>
    <tbody>
        {{#if elements}}
          {{#each elements as |row|}}
          <tr>
            <td name="gameId">{{row.id}}</td>
            <td name="gameName">{{row.name}}</td>
            <td name="gameMin">{{row.min_playtime}}</td>
            <td name="gameMax">{{row.max_playtime}}</td>
          </tr>
          {{/each}} 
        {{else}}
            <tr>
                <td colspan="{{header.length}}" class="no-records">No records found!</td>
            </tr>
        {{/if}}
    </tbody>
  </table>
  </div>
</div>

